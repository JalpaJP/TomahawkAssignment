@model ContentInfo
@{ ViewData["Title"] = "Home Page"; }
<div class="text-center">
    <h1 class="display-4">Welcome To My Page</h1>
   
    <form asp-controller="Home" asp-action="Index" method="post">
        <br />
        <button type="submit">Download</button>
        <button onclick=" return cancelDownload()">Cancel</button>

        <button type="submit" onclick=" return Clearlable()">clear</button>
        @*<label id="lblcount" class="form-control">@ViewBag.Content </label>*@
    <br />
        <br />
        <input type="text"  asp-for="ContentLength" class="form-control" />

    </form>
</div>
<script>
    function cancelDownload() {
       $.ajax({
            url: "/Home/Cancel",
            type: "GET",
            data: "",
            success: function (result) {
                alert(result);
            },
            error: function (res) {
                alert(res);
            }
        });
       return false;
    }
    function Clearlable() {
        $("#ContentLength").val("0");
       
        return false;
    }

</script>